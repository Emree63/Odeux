<UserControl x:Class="OdeuxXaml.User_Control.Etu.Notes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OdeuxXaml.User_Control.Etu"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1500">
    <Viewbox>
        <Border BorderBrush="{DynamicResource TextColor}" BorderThickness="1" Margin="10,10" Width="1375" Height="750" >
            <Grid>
                <WrapPanel>
                    <Button Background="Transparent" Margin="80,0,0,0" >
                        <Grid>
                            <TextBlock Text="&lt;" FontSize="25" Foreground="{DynamicResource TextColor}"/>
                        </Grid>
                    </Button>
                    <Label x:Name="Semestre"  HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}" FontSize="30">Semestre 1</Label>
                    <Button Background="Transparent">
                        <Grid>
                            <TextBlock Text=">" FontSize="25" Foreground="{DynamicResource TextColor}"/>
                        </Grid>
                    </Button>
                </WrapPanel>
                <StackPanel Margin="100,50,100,0">
                    <WrapPanel>
                        <Button Background="Transparent" Margin="80,0,20,0" >
                            <Grid>
                                <TextBlock Text="&lt;" FontSize="35" Foreground="{DynamicResource TextColor}"/>
                            </Grid>
                        </Button>
                        <Grid>
                            <Rectangle RadiusX="15" RadiusY="15" Width="883" Height="62"  Fill="{DynamicResource BackgroundColor2}"/>
                            <Label FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}">
                                UE 1 - Développer des applications informatiques simples
                            </Label>
                        </Grid>
                        <Button Background="Transparent" Margin="20,0,0,0">
                            <Grid>
                                <TextBlock Text=">" FontSize="35" Foreground="{DynamicResource TextColor}"/>
                            </Grid>
                        </Button>
                    </WrapPanel>
                    <WrapPanel Margin="0,10,0,0">
                        <Label VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Center"  Width="350" Height="50" Foreground="{DynamicResource TextColor}" Background="{DynamicResource BackgroundColor2}" Margin="150,0,0,0" FontSize="25">
                            Moyenne Générale : 14,5
                        </Label>
                        <Label VerticalAlignment="Top" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Foreground="{DynamicResource TextColor}" Width="350" Height="50" Background="{DynamicResource BackgroundColor2}" Margin="110,0,0,0" FontSize="25">
                            Moyenne Classe : 15
                        </Label>
                    </WrapPanel>
                </StackPanel>
                <ListBox  HorizontalAlignment="Left" VerticalAlignment="Top" 
                      Width="1500" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                      Background="Transparent" Height="580" x:Name="ListBox" Margin="0,200,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>

                            </WrapPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
