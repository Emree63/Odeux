<Window x:Class="Odeux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Odeux"
        xmlns:UserControl="clr-namespace:Odeux.User_Control"
        mc:Ignorable="d"
        Title="Connection-Page" Height="1080" Width="1920">
    <DockPanel >
        <WrapPanel DockPanel.Dock="Top" Background="#178F96">
            <Image Source="images\Logo-Odeux.png" MaxWidth="450" Margin="755,-40,0,-110" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </WrapPanel>
        <Grid>
            <Image Source="images\Fond.png" Width="2200" Margin="-1184,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="694" />
            <Button HorizontalAlignment="Center" Margin="00,181,0,0" Background="Transparent" 
                 VerticalAlignment="Center" Width="287" Height="62" FontSize="30" Opacity="0.8" BorderBrush="Transparent" Foreground="#FF39B872" Click="Button_Connection" >
                <Grid>
                    <Rectangle  RadiusX="15" RadiusY="15" Width="283" Height="52" Fill="#FF979595">
                    </Rectangle>
                    <TextBlock Text="Se connecter" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black"></TextBlock>
                </Grid>
            </Button>
            <TextBlock Text="Bienvenue sur Odeux ! Connectez vous pour accéder à votre espace." VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Poppins" FontSize="38" Foreground="#6F8DAD" Margin="00,-490,0,0"/>
            <TextBox HorizontalAlignment="Center" BorderThickness="0 0 0 1" CaretBrush="DimGray" Height="35"  Margin="25,-200,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="471" FontSize="20" />

            <PasswordBox HorizontalAlignment="Center" BorderThickness="0 0 0 1" CaretBrush="DimGray" Height="35" Margin="25,-100,0,0"   VerticalAlignment="Center" Width="471" FontSize="20"/>
            <TextBlock Text="Identifiant :" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="34" Foreground="gray" Margin="-700,-200,0,0"/>
            <TextBlock Text="Mot de Passe :" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="34" Foreground="gray" Margin="-700,-100,0,0"/>
            <UserControl:Thème_Affichage Margin="1500,450,0,0"/>
        </Grid>

    </DockPanel>

</Window>
