<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Odeux"
      xmlns:User_Control="clr-namespace:Odeux.User_Control" x:Class="Odeux.Template_etudiant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Template_etudiant">

    <DockPanel>
        <StackPanel>
            <!-- bouton accueil et logo -->
            <Button/>
            <Image/>
        </StackPanel>

        <StackPanel>
            <!-- Consulter les notes/ouvrir l'aide -->
            <Button Content="Consulter les notes"/>
            <Button Content="Ouvrir l'aide en ligne"/>
        </StackPanel>

        <StackPanel>
            <Button Content="Se déconnecter"/>
        </StackPanel>

        <StackPanel>
            <!-- déclarer présence/infos importantes/edt -->
            <Button Content="Déclarer sa présence"/>
            <Button Content="Dernières informations importantes"/>
            <Button Content="Emploi du temps"/>
        </StackPanel>

        <WrapPanel>
            <!-- Thème d'affichage -->

        </WrapPanel>

        <!-- User control Detail -->
        <ContentControl>
            <User_Control:Accueil_template_fill/>
        </ContentControl>
    </DockPanel>
</Page>
