<UserControl x:Class="Odeux.User_Control.EntrerDesNotes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Odeux.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <Button HorizontalAlignment="Center" Margin="00,0,0,0" Background="Transparent" 
                 VerticalAlignment="Center" Width="388" Height="62" FontSize="30" Opacity="0.8" BorderBrush="Transparent" >
            <Grid>
                <Rectangle RadiusX="15" RadiusY="15"  Width="383" Height="52"  Fill="{DynamicResource BackgroundColor2}">
                </Rectangle>
                <TextBlock Text="Entrer des notes" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
            </Grid>
        </Button>            
    </Grid>
</UserControl>
