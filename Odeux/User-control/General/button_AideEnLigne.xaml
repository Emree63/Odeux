<UserControl x:Class="Odeux.User_Control.General.AideEnLigne"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Odeux.User_Control.General"
             mc:Ignorable="d" 
             Height="110" Width="360">
    <Grid>
        <Rectangle  RadiusX="15" RadiusY="15" Fill="#EA5211"/>
        <Button HorizontalAlignment="Center" Background="Transparent" 
                 VerticalAlignment="Center" Width="487" Height="80" FontSize="30" BorderBrush="Transparent" Foreground="#FF39B872" Click="Aide">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="..\..\images\Bouee.png"  Width="0" Grid.Column="0"/>
                <TextBlock Text="Aide en ligne" Foreground="#FFFFFF" Grid.Column="1"/>
                
            </Grid>
        </Button>
    </Grid>
</UserControl>
