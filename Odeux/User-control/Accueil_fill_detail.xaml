    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="30" />
                <Setter Property="Foreground" Value="#F1FBFE" />
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            <Style TargetType="Rectangle">
                <Setter Property="Fill" Value="#110E3D"/>
                <Setter Property="RadiusX" Value="5"/>
                <Setter Property="RadiusY" Value="15" />
            </Style>
        </Grid.Resources>
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Signatures et dernières notes -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="EDT D'aujourd'hui" Margin="20, 10, 0, 0" Grid.Row="0" TextAlignment="Center"/>
                
                <Border Grid.Row="1"> <!-- LineBreak du bled -->

