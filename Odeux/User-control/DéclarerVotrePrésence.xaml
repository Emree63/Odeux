<UserControl x:Class="Odeux.User_Control.DéclarerVotrePrésence"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Odeux.User_Control"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1000">
    <Grid>
        <Grid Margin="20,20,100,100">
            <Border BorderBrush="White" BorderThickness="3"/>
            <ScrollBar Background="Transparent" HorizontalAlignment="Right" BorderBrush="#FF178F96" Cursor="Hand"/>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>

        <Button Content="Déclarer" VerticalAlignment="Center" HorizontalAlignment="Center" Width="90" Height="70" Margin="600,-500,0,0" Grid.Row="0" Cursor="Hand"/>

        <WrapPanel Grid.Row="0">
            <Label Foreground="{DynamicResource TextColor}">
                        Le 25/03/2022 de 13h30 à 15h30
            </Label>
            <Separator/>
            <Label Foreground="{DynamicResource TextColor}">
                        
                Test dolor ipsum lorem sat imet
                R2.01: Math
                groupe 3
                salle : a18
                Intervenant : Marc
 
            </Label>
        </WrapPanel>

    </Grid>
</UserControl>
